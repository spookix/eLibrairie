@{ var totalPrice = Context.Session.Get<decimal>("_PrixTotal");}
@{
    ViewData["Title"] = "Paiement";
}


<div class="container">
    <div class="text-center mb-5">
        <h1>Paiement</h1>
    </div>
    <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-4'>
            @*<script src='https://js.stripe.com/v2/' type='text/javascript'></script>*@
            <form accept-charset="UTF-8" action="/" method="post">
                <div class='form-row'>
                    <div class='col-xs-12 form-group required'>
                        <label class='control-label'>Nom sur la carte</label>
                        <input class='form-control' size='4' type='text'>
                    </div>
                </div>
                <div class='form-row'>
                    <div class='col-xs-12 form-group required'>
                        <label class='control-label'>Numéro de carte</label>
                        <input autocomplete='off' class='form-control card-number' size='20' type='text'>
                    </div>
                </div>
                <div class='form-row'>
                    <div class='col-xs-4 form-group cvc required'>
                        <label class='control-label'>CVC</label>
                        <input autocomplete='off' class='form-control card-cvc' placeholder='ex. 311' size='4' type='text'>
                    </div>
                    <div class='col-xs-4 form-group expiration required'>
                        <label class='control-label'>Expiration</label>
                        <input class='form-control card-expiry-month' placeholder='MM' size='2' type='text'>
                    </div>
                    <div class='col-xs-4 form-group expiration required'>
                        <label class='control-label'> </label>
                        <input class='form-control card-expiry-year' placeholder='YYYY' size='4' type='text'>
                    </div>
                </div>
                <div class='form-row'>
                    <div class='col-md-12'>
                        <div class='form-control total btn btn-info'>
                            Total:
                            <span class='amount'>@ViewBag.PrixTotal€</span>
                        </div>
                    </div>
                </div>
                <div class='form-row'>
                    <div class='col-md-12 form-group'>
                        <button asp-action="Facture" class='form-control btn btn-primary submit-button' type='submit'>Payer »</button>
                    </div>
                </div>

            </form>
        </div>
        <div class='col-md-4'></div>
    </div>
</div>