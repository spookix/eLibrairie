@model bool
@{
    ViewData["Title"] = "ModifMdp";
}

<h1 class="text-center m-5">Modification de mot de passe</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="ModifMdp">
            <div class="form-group">
                <label name="mdpBase" class="control-label">Mot de passe actuel</label>
                <input type="password" id="mdpBase" name="mdpBase" class="form-control" />
                @if (!Model)
                {
                    <label for="username"><strong>Erreur: </strong>Mauvais mot de passe</label>
                }
            </div>
            <div class="form-group">
                <label name="mdpChangeUn" class="control-label">Nouveau mot de passe</label>
                <input type="text" id="mdpChangeUn" name="mdpChangeUn" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" />
            </div>
            <div class="form-group mb-5">
                <label name="mdpChangeDeux" class="control-label">Saisir à nouveau le mot de passe</label>
                <input type="text" id="mdpChangeDeux" name="mdpChangeDeux" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" />
                @if (!ViewBag.MdpDiff)
                {
                    <label for="username"><strong>Erreur: </strong>Les mots de passes étaient différents</label>
                }
                
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4">
                        <input type="submit" value="Sauvegarder" class="btn btn-primary btn-block">
                    </div>
                    
                    <div class="col-lg-4">
                        <a asp-controller="Home" asp-action="AffichageCompte" class="btn btn-primary btn-block">Annuler</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

