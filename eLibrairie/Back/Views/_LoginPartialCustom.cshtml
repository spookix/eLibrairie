@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-controller="AppUser" asp-action="profil" asp-route-username ="@User.Identity.Name" class="nav-link text-dark @(this.ViewBag.currentIndexMenu=="profil" ? "active" : "")"><strong>@User.Identity.Name</strong></a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-controller="home" asp-action="logout" class="nav-link text-dark">Déconnexion</a>
        </li>
    }
    else
    {        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="register">Créer un compte</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="login">Se connecter</a>
        </li>
    }
</ul>
